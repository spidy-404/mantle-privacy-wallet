# Database URL (required)
# Get from Supabase or your PostgreSQL provider
DATABASE_URL=postgresql://user:password@host:5432/database

# Blockchain Configuration (required)
RPC_URL=https://rpc.sepolia.mantle.xyz
CHAIN_ID=5003

# Contract Addresses (required)
# These are deployed on Mantle Sepolia testnet
ERC5564_ANNOUNCER_ADDRESS=0x53aCb6c2C0f12A748DB84fbA00bf29d66b3B5259
SHIELDED_POOL_ADDRESS=0xa19cEbb855D7Ec92eB24b9DD33Fd3548CB458C19

# Scanning Configuration (optional)
# Block to start scanning from (contract deployment block)
START_BLOCK=11394476

# Number of blocks to scan per iteration
# Increase for faster initial sync, decrease if hitting rate limits
BLOCKS_PER_SCAN=1000

# Milliseconds between scan iterations
# Lower = more real-time, but more RPC requests
SCAN_INTERVAL=5000

# Server Configuration (optional)
# REST API port
PORT=3001

# WebSocket port
WS_PORT=3002

# Node environment
NODE_ENV=development
